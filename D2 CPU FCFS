#include<stdio.h>
int main()
{
	int n=4,i;
	int wt[4];
	int tat[4];
	int bt[]={6,4,8,10};
	
	wt[0]=0;
	tat[0]=bt[0];

	for(i=1;i<4;i++){
		wt[i]=tat[i-1];
		tat[i]=bt[i]+wt[i];
	}
	printf("Process\tBurst Time\tWaiting Time\tTurnaround Time\n");
    for (int i = 0; i <4; i++) {
        printf("%d\t\t%d\t\t%d\t\t%d\n", i + 1, bt[i], wt[i], tat[i]);
    }
    
    int avgwt=0,avgtat=0;
    for(i=0;i<n;i++){
    	avgwt=avgwt+wt[i];
    	avgtat=avgtat+tat[i];
	}
	avgwt=(avgwt/n);
	avgtat=(avgtat/n);
	
	printf("The average Wait time is %d\nThe average Turnaround Time is %d\n",avgwt,avgtat);
	
	return 0;
}
